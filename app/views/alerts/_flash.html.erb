<% if flash[:notice] %>
  <div class="mb-4 p-4 rounded-md bg-green-50 border border-green-300 text-green-700">
    <p><%= flash[:notice] %></p>
  </div>
<% end %>

<% if flash[:error] %>
  <div class="mb-4 p-4 rounded-md bg-red-50 border border-red-300 text-red-700">
    <p><%= flash[:error] %></p>
  </div>
<% end %>

<% if flash[:alert] %>
  <div class="mb-4 p-4 rounded-md bg-yellow-50 border border-yellow-300 text-yellow-700">
    <p><%= flash[:alert] %></p>
  </div>
<% end %>